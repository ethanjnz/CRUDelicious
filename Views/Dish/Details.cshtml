@model Dish
<div class="text-center mt-5">
    <h1>@Model.Name</h1>
    @await Html.PartialAsync("_navbar")
</div>
<div class="card w-50 mx-auto p-3">

    <div class="m-3">
        <h3 class="card-title">@Model.Name</h3>
        <h5 class="card-subtitle text-body-secondary">by @Model.Chef</h5>
    </div>


    <ul class="list-group list-group-flush">
        <li class="list-group-item">Description: @Model.Description</li>
        <li class="list-group-item">Calories: @Model.Calories</li>
        <li class="list-group-item">Tastiness: @Model.Tastiness</li>
    </ul>

    <div class="d-flex justify-content-evenly mt-3">
        <form asp-action="DeleteDish" asp-controller="Dish" method="post" asp-route-dishesId="@Model.DishesId">
            <button class="btn btn-danger">Delete</button>
        </form>
        <a asp-action="EditDish" asp-controller="Dish" asp-route-dishesId="@Model.DishesId"
            class="btn btn-primary">Edit</a>
    </div>
</div>

</div>